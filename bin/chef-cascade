# Add custom gem path
ENV['GEM_PATH'] = '/opt/chef-cascade/gems'

# For development
$:.unshift(File.join(File.dirname(__FILE__), "..", "lib"))

# For package based deployment
$:.unshift '/opt/chef-cascade/lib'

require 'chef/application/cascade'

Chef::Application::Cascade.new.run
